package im.hyphen.util;

public class LUtil
{
	public static StringBuffer sbAll = null;
	public static StringBuffer sbSnd = null;
	public static void println(Object pstr)
	{
		String curr_date = SUtil.getCurrDate();
		sbAll = new StringBuffer();
		sbAll.append("[");
		sbAll.append(curr_date.substring(8,10)).append(":").append(curr_date.substring(10,12)).append(":").append(curr_date.substring(12,14));
		sbAll.append("]" );
		sbAll.append(pstr);
	}

	public static void println(String prefix, Object pstr)
	{
		String curr_date = SUtil.getCurrDate();
		sbAll = new StringBuffer();
		sbAll.append("[");
		sbAll.append(curr_date.substring(8,10)).append(":").append(curr_date.substring(10,12)).append(":").append(curr_date.substring(12,14));
		sbAll.append("]" );
		sbAll.append(pstr);

	}


}
